            </p>
        </div>
    </div>


    <script>
        // JS para o menu mobile e dropdowns
        const mobileMenu = document.getElementById('mobile-menu');
        document.getElementById('menu-toggle').addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
        });
       
        // Esconder menu mobile ao clicar em um link
        function hideMobileMenu() {
             mobileMenu.classList.add('hidden');
        }

        // Fun√ß√£o para mostrar mensagem de feedback (substituindo o alert)
        window.showFeedback = function(message, duration = 3000) {
            const feedbackBox = document.getElementById('feedback-message');
            feedbackBox.textContent = message;
            feedbackBox.classList.remove('hidden');
           
            setTimeout(() => {
                feedbackBox.classList.add('hidden');
            }, duration);
        }

        // Simula√ß√£o de visualiza√ß√£o de menu
        function showMenuMessage() {
            window.showFeedback("Carregando o Menu Completo... (Simula√ß√£o de PDF)", 4000);
        }

        // Simula√ß√£o de envio do formul√°rio de contato
        function handleContact(event) {
            event.preventDefault(); // Impede o envio real do formul√°rio
           
            const nome = document.getElementById('nome').value;
           
            // Limpa o formul√°rio
            document.getElementById('nome').value = '';
            document.getElementById('email').value = '';
            document.getElementById('mensagem').value = '';

            window.showFeedback(`Obrigado(a), ${nome}! Sua mensagem foi enviada com sucesso para o Terra Viva.`, 5000);
        }

        // JS para o Carrossel de Imagens
        const slidesContainer = document.getElementById('slides-container');
        const slides = document.querySelectorAll('.carousel-slide');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const totalSlides = slides.length;
        let currentSlide = 0;

        function showSlide(index) {
            currentSlide = (index + totalSlides) % totalSlides;
            const offset = -currentSlide * 100;
            slidesContainer.style.transform = `translateX(${offset}%)`;
        }

        nextBtn.addEventListener('click', () => {
            showSlide(currentSlide + 1);
            resetAutoAdvance();
        });

        prevBtn.addEventListener('click', () => {
            showSlide(currentSlide - 1);
            resetAutoAdvance();
        });

        let autoAdvanceInterval;

        function startAutoAdvance() {
            autoAdvanceInterval = setInterval(() => {
                showSlide(currentSlide + 1);
            }, 5000);
        }

        function resetAutoAdvance() {
            clearInterval(autoAdvanceInterval);
            startAutoAdvance();
        }

        startAutoAdvance();
        // Fim JS Carrossel


        // JS para Login do Funcion√°rio (Modal)
        const employeeModal = document.getElementById('employee-modal-overlay');
        const employeeStatus = document.getElementById('employee-auth-status');

        function showEmployeeLoginModal() {
            employeeModal.classList.remove('hidden');
            employeeStatus.classList.add('hidden');
            document.getElementById('employee-email').value = '';
            document.getElementById('employee-password').value = '';
        }

        function closeEmployeeLoginModal() {
            employeeModal.classList.add('hidden');
        }

        function handleEmployeeLogin(event) {
            event.preventDefault();
           
            const email = document.getElementById('employee-email').value;
            const password = document.getElementById('employee-password').value;

            const DUMMY_EMAIL = "gerente@terraviva.com";
            const DUMMY_PASSWORD = "admin";

            if (email === DUMMY_EMAIL && password === DUMMY_PASSWORD) {
                employeeStatus.classList.add('hidden');
                closeEmployeeLoginModal();
                window.showFeedback("Acesso de Funcion√°rio concedido! (Simulado: Acesso ao Dashboard/Database)", 6000);
            } else {
                employeeStatus.textContent = "Credenciais inv√°lidas. Tente novamente.";
                employeeStatus.classList.remove('hidden');
                document.getElementById('employee-password').value = '';
            }
        }
        window.showEmployeeLoginModal = showEmployeeLoginModal;
        window.closeEmployeeLoginModal = closeEmployeeLoginModal;
        window.handleEmployeeLogin = handleEmployeeLogin;
        // Fim JS Login do Funcion√°rio
       
        // NOVO JS para Modal de Fornecedores
        const supplierModal = document.getElementById('supplier-modal-overlay');

        window.showSupplierModal = function() {
            supplierModal.classList.remove('hidden');
        }

        window.closeSupplierModal = function() {
            supplierModal.classList.add('hidden');
        }
        // Fim JS Modal de Fornecedores

    </script>

    <!-- Script de Autentica√ß√£o Firebase (MANDATORY) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, signOut, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Vari√°veis globais do Firebase (MANDATORY)
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');

        // Inst√¢ncias
        let app, auth, db;

        async function initializeFirebase() {
            try {
                if (Object.keys(firebaseConfig).length === 0) {
                    console.error("A configura√ß√£o do Firebase est√° faltando. N√£o ser√° poss√≠vel usar o banco de dados.");
                    return;
                }
                setLogLevel('debug'); // Ativa o log para debugging

                app = initializeApp(firebaseConfig);
                auth = getAuth(app);
                db = getFirestore(app);

                // 1. Configura o Listener de Estado de Autentica√ß√£o
                onAuthStateChanged(auth, (user) => {
                    const authBtn = document.getElementById('auth-btn');
                    if (user) {
                        // Usu√°rio logado
                        authBtn.textContent = 'Sair';
                        authBtn.classList.remove('bg-primary');
                        authBtn.classList.add('bg-secondary', 'hover:bg-secondary-dark');
                        console.log(`Usu√°rio autenticado: ${user.uid}`);
                        // No futuro, aqui voc√™ carregaria dados privados
                    } else {
                        // Usu√°rio deslogado
                        authBtn.textContent = 'Entrar';
                        authBtn.classList.remove('bg-secondary', 'hover:bg-secondary-dark');
                        authBtn.classList.add('bg-primary');
                        console.log('Nenhum usu√°rio autenticado.');
                    }
                });

                // 2. Realiza o login inicial (Custom Token ou An√¥nimo)
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    await signInWithCustomToken(auth, __initial_auth_token);
                    console.log('Login com Custom Token bem-sucedido.');
                } else {
                    await signInAnonymously(auth);
                    console.log('Login an√¥nimo bem-sucedido.');
                }

            } catch (error) {
                console.error("Falha na inicializa√ß√£o ou login do Firebase:", error);
            }
        }

        // Fun√ß√£o de A√ß√£o do Bot√£o Login/Sair (Cliente)
        window.handleAuthAction = async function() {
            if (!auth) {
                await initializeFirebase();
                return;
            }

            if (auth.currentUser) {
                // Se logado, deslogar (Cliente)
                try {
                    await signOut(auth);
                    window.showFeedback("Voc√™ saiu da sua conta.", 3000);
                } catch (error) {
                    console.error("Erro ao sair:", error);
                    window.showFeedback("Erro ao sair. Tente novamente.", 3000);
                }
            } else {
                // Se deslogado, tentar logar novamente (Cliente)
                window.showFeedback("Tentando entrar...", 3000);
                await initializeFirebase();
            }
        }

        // Inicializa o Firebase ao carregar a janela
        window.addEventListener('load', initializeFirebase);
    </script>
</body>
</html>
